{
    "name": "DuolingoTimer",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Duolingoに制限時間を追加します。",
    "icons": {
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.duolingo.com/learn"
            ],
            "js": [
                "progressbar.min.js",
                "DuolingoTimer.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    }
}