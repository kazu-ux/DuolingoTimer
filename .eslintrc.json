{
    "env": {
        "browser": true,
        "es2021": true,
        "webextensions": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-use-before-define": [
            "error",
            {
                "variables": false,
                "functions": false
            }
        ]
    },
    "globals": {
        "ProgressBar": true,
        "window": true
    }
}